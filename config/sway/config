### Autostart
exec_always --no-startup-id autotiling
exec_always --no-startup-id xhost +SI:localuser:root
exec transmission-daemon
exec waybar
exec mako
exec fcitx
exec blueman-tray
exec /usr/lib/xfce-polkit/xfce-polkit &
exec corectrl
exec polychromatic-tray-applet
exec eww daemon
exec thunar --daemon
exec makethunarworkagain

### Variables
set $mod Mod4
set $term kitty

